second array max and min
  #include <stdio.h>
#include <stdlib.h>
int cmp_asc(const void *a, const void *b) {
    return (int)a - (int)b;
}
int cmp_desc(const void *a, const void *b) {
    return (int)b - (int)a;
}
int main()
{
    int n;
    scanf("%d", &n);
    int arr[n];
    for(int i = 0; i < n; i++) 
        scanf("%d", &arr[i]);
    int even[1000], odd[1000];
    int even_count = 0, odd_count = 0;
    for(int i = 0; i < n; i++) {
        if(i % 2 == 0) 
            even[even_count++] = arr[i];
        else 
            odd[odd_count++] = arr[i];
    }
    qsort(even, even_count, sizeof(int), cmp_desc);
    qsort(odd, odd_count, sizeof(int), cmp_asc);
    int second_largest_even = even[1];  
    int second_smallest_odd = odd[1];
    printf("Sum=%d\n", second_largest_even + second_smallest_odd);
    return 0;
}
