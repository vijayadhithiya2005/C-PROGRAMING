collatz problem
#include <stdio.h>

void collatzSequence(int n) {
    int count = 0;
    printf("Enter a number\n");
    printf("%d\n",n);
    while (n != 1) {
        if (n % 2 == 0) {
            n = n / 2;
        } else {
            n = 3 * n + 1;
        }
        printf("%d\n", n);
        count++;
    }
    printf("count:%d\n",count);
}

int main() {
    int n;
    scanf("%d",&n);
    collatzSequence(n);
    return 0;
}
