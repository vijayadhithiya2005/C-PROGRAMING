recursion sum of numbers
  #include <stdio.h>


int sum(int n) {
    if (n == 1)
        return 1;
    else
        return n + sum(n - 1);
}

int main() {
    int n;
    
 
    scanf("%d", &n);

   
    if (n >= 1 && n <= 50) {
        int result = sum(n);
       
        printf("The sum of numbers from 1 to %d : %04d\n", n, result);
    } else {
        printf("Enter a Valid Input!!!!!!!!!!!!!!!!!!\n");
    }

    return 0;
}
