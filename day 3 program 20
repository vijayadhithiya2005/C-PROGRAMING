maximum of each column
  #include <stdio.h>

int main() {
    int rows, cols;

    scanf("%d", &rows);
    scanf("%d", &cols);

    int matrix[rows][cols];


    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < cols; j++) {
            scanf("%d", &matrix[i][j]);
        }
    }
    for (int j = 0; j < cols; j++) {
        int max = matrix[0][j];
        for (int i = 1; i < rows; i++) {
            if (matrix[i][j] > max) {
                max = matrix[i][j];
            }
        }
        printf("Maximum value in column %d is %d\n", j + 1, max);
    }

    return 0;
}
