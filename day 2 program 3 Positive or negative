positive or negative 
#include <stdio.h>

int main() {
    int num;
    scanf("%d", &num);

    if (num > 0) {
        printf("The Given Number %d is Positive.", num);
    } else if (num < 0) {
        printf("The Given Number %d is Negative.", num);
    } else {
        printf("The Given Number %d is Zero.", num);
    }

    return 0;
}

