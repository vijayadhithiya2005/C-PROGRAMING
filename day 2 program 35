pattern 1
  #include <stdio.h>

void printPattern(int n) {
    
    for (int i = 1; i <= n; i++) {
        for (int k = 1; k <= 2 * i - 1; k++) {
            printf("*");
        }
        printf("\n");
    }
    
    for (int i = n - 1; i >= 1; i--) {
        for (int k = 1; k <= 2 * i - 1; k++) {
            printf("*");
        }
        printf("\n");
    }
}

int main() {
    int n;
    scanf("%d", &n);
    printPattern(n);
    return 0;
}
