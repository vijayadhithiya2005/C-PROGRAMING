count the vowels
  #include <stdio.h>
#include <string.h>
#include <ctype.h>

int is_vowel(char c) {
    c = tolower((unsigned char)c);
    return (c=='a' || c=='e' || c=='i' || c=='o' || c=='u');
}

int main() {
    char str[1000];
    int count = 0;
    if (!fgets(str, sizeof(str), stdin)) return 0;
    for (int i = 0; str[i] != '\0'; i++) {
        if (is_vowel(str[i])) {
            count++;
        }
    }
    printf("%d\n", count);
    return 0;
}
