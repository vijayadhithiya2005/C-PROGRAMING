pattern-2
  #include <stdio.h>

void printPattern(int n) {
    for (int i = 1; i <= n; i++) {
        // Print increasing sequence
        for (int j = 1; j <= i; j++) {
            printf("%d", j);
        }
        // Print decreasing sequence
        for (int k = i - 1; k >= 1; k--) {
            printf("%d", k);
        }
        printf("\n");
    }
}

int main() {
    int n;
    scanf("%d", &n);
    if (n > 9) {
        printf("Invalid Input\n");
    } else {
        printPattern(n);
    }
    return 0;
}
