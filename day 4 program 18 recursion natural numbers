recursion natural numbers
  #include <stdio.h>

void printNaturalNumbers(int current, int n) {
    if (current > n)
        return;
    printf("%d ", current);
    printNaturalNumbers(current + 1, n);
}

int main() {
    int n;

   
    scanf("%d", &n);

    
    if (n >= 1 && n <= 50) {
        printf("The first %d Natural Numbers are:\n", n);
        printNaturalNumbers(1, n);
        printf("\n");
    } else {
        printf("Enter a Valid Input!!!!!!!!!!!!!!!!!!!!!!!!\n");
    }

    return 0;
}
